function titleBar(txt,tBarC,tBartC,y)
  term.setCursorPos(1,y)
  term.setBackgroundColor(tBarC)
  term.setTextColor(tBartC)
  term.clearLine()
  term.setCursorPos(3, y)
  write(txt)
end

function header(txt,tBarC,tBartC)
   if OneOS then
   	OneOS.ToolBarColour = tBarC
   	OneOS.ToolBarTextColour = tBartC
    titleBar("",tBarC,tBartC,2)
    titleBar(txt,tBarC,tBartC,3)
    titleBar("",tBarC,tBartC,4)
   else	
    titleBar("",tBarC,tBartC,1)
    titleBar(txt,tBarC,tBartC,2)
    titleBar("",tBarC,tBartC,3)
   end
end
